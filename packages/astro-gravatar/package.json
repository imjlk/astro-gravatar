{
  "name": "astro-gravatar",
  "version": "0.0.1",
  "type": "module",
  "main": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    },
    "./GravatarProfileCard": {
      "types": "./src/components/GravatarProfileCard.astro",
      "import": "./src/components/GravatarProfileCard.astro"
    },
    "./GravatarAvatar": {
      "types": "./src/components/GravatarAvatar.astro",
      "import": "./src/components/GravatarAvatar.astro"
    },
    "./GravatarQR": {
      "types": "./src/components/GravatarQR.astro",
      "import": "./src/components/GravatarQR.astro"
    },
    "./types": {
      "types": "./src/lib/types.ts",
      "import": "./src/lib/types.ts"
    }
  },
  "files": [
    "src/**/*",
    "index.ts",
    "tsconfig.json"
  ],
  "keywords": [
    "astro",
    "astro-component",
    "gravatar",
    "avatar",
    "profile",
    "component"
  ],
  "description": "Astro components for integrating Gravatar avatars and profiles",
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/astro-gravatar.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/astro-gravatar/issues"
  },
  "homepage": "https://github.com/your-username/astro-gravatar#readme",
  "scripts": {
    "build": "astro build",
    "dev": "astro dev",
    "preview": "astro preview",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test src/**/__tests__/*.test.ts",
    "test:integration": "bun test src/**/__tests__/*.integration.test.ts",
    "test:components": "bun test src/components/**/__tests__/*.test.ts"
  },
  "devDependencies": {
    "astro": "^5.16.5",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "astro": "^4.0.0 || ^5.0.0"
  }
}