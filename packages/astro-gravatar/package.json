{
  "name": "astro-gravatar",
  "version": "0.0.15",
  "type": "module",
  "main": "./index.ts",
  "bin": {
    "astro-gravatar": "./src/cli/index.ts"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    },
    "./cli": {
      "types": "./src/cli/index.ts",
      "import": "./src/cli/index.ts"
    },
    "./GravatarProfileCard": {
      "types": "./src/components/GravatarProfileCard.astro",
      "import": "./src/components/GravatarProfileCard.astro"
    },
    "./GravatarAvatar": {
      "types": "./src/components/GravatarAvatar.astro",
      "import": "./src/components/GravatarAvatar.astro"
    },
    "./GravatarQR": {
      "types": "./src/components/GravatarQR.astro",
      "import": "./src/components/GravatarQR.astro"
    },
    "./types": {
      "types": "./src/lib/types.ts",
      "import": "./src/lib/types.ts"
    }
  },
  "files": [
    "src/**/*",
    "index.ts",
    "tsconfig.json"
  ],
  "keywords": [
    "astro",
    "astro-component",
    "gravatar",
    "avatar",
    "profile",
    "component"
  ],
  "description": "Astro components for integrating Gravatar avatars and profiles",
  "author": "imjlk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjlk/astro-gravatar.git"
  },
  "bugs": {
    "url": "https://github.com/imjlk/astro-gravatar/issues"
  },
  "homepage": "https://astro-gravatar.and.guide",
  "scripts": {
    "build": "bun astro build",
    "dev": "bun astro dev",
    "preview": "bun astro preview",
    "typecheck": "bun tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-dir=coverage && bun run ../../scripts/check-coverage.ts",
    "test:unit": "bun test src/**/__tests__/*.test.ts",
    "test:integration": "bun test src/**/__tests__/*.integration.test.ts",
    "test:components": "bun test src/components/**/__tests__/*.test.ts",
    "bundle:size": "bun build src/lib/gravatar.ts --outfile=/tmp/bundle.js --minify && stat -c%s /tmp/bundle.js | xargs -I {} echo 'Bundle size (minified): {} bytes'",
    "prepublishOnly": "bun run build && bun test"
  },
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 90,
      "functions": 90,
      "lines": 90
    }
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "astro": "catalog:",
    "@types/node": "catalog:",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "astro": "^4.0.0 || ^5.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
